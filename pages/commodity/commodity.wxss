/* pages/commodity/commodity.wxss */
@import "../template/template.wxss";

.center {
  margin-left: 45rpx;
}

.bigPicture {
  margin-top: 100rpx;
  width: 100%;
  height: 450rpx;
}

.bigPicture image {
  width: 100%;
  height: 100%;
}

.title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  margin: 40rpx 30rpx;
}

.courseWrap {
  margin: 20rpx 30rpx;
  padding: 20rpx 30rpx;
  border: 1px solid #dbdbdb;
  background: #fff;
}

.courseWrap text:nth-of-type(1) {
  font-size: 16px;
  color: #76a233;
  font-weight: bold;
}

.courseWrap text:nth-of-type(2) {
  float: right;
  color: #888;
}

.textInfo {
  margin: 20rpx 30rpx;
  padding: 20rpx 30rpx;
  border: 1px solid #dbdbdb;
  background: #fff;
}

.textInfo text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

.imageShow {
  margin: 40rpx 60rpx 120rpx 60rpx;
}

.imageShow image {
  width: 100%;
  margin: 20rpx 0;
}
