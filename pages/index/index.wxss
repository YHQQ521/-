/**index.wxss**/
@import "../template/template.wxss";
page{
  background: url("../../images/photo/HomePage_bg.jpg") repeat-y center center;
  background-size: 100% 100%;
}
/*头部*/
.header{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background:#f9f9f9;
  z-index: 1;
}
.header .return{
  float: left;
  width: 40rpx;
  margin-top:30rpx;
  margin-left: 30rpx;
}
.header .center{
  position: relative;
  left: 126rpx;
  top: 20rpx;
  width: 450rpx;

  text-align: center;
}
.header .center image{
  position: absolute;
  left: 80rpx;
  top: -15rpx;
  width: 100rpx;
  vertical-align: middle;
}
.header .center text{
  position: absolute;
  left: 170rpx;
  top: -15rpx;
  font-weight: bold;
}
/*轮播图*/
.carousel{
  margin-top: 100rpx;
  width: 100%;
  height: 450rpx;
}
.carousel image{
  width: 100%;
  height: 100%;
}
/*模块*/
.unit{
  display: flex;
  margin: 30rpx 20rpx;
}
.unit .unit-item{
  width: 20%;
  text-align: center;
}
.unit .unit-item image{
  display: block;
  width: 80rpx;
  margin: 10rpx auto;
}
/*热门推荐*/
.hotRecomend{
  margin: 50rpx 0 20rpx 0;
  text-align: center;
  font-size: 16px;
}
/*热门推荐具体课程*/
.hotCourseWrap{
  margin-bottom: 100rpx;
}